extends base.pug

block content 
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="Username", name="username", type="text", required)
        input(placeholder="Password", name="password", type="password", required)
        input(type="submit", value="Login")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=4740271bc74a812a150e&allow_signup=false") Continue with GitHub &rarr;
    hr
    div    
        span Don't have an account? 
        a(href="/join") Create now &rarr;